{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default-capability",
  "description": "Default permissions for the main window",
  "windows": ["main"],
  "permissions": [
    "dialog:default",
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-text-file",
      "scope": {
        "allow": ["**"]
      }
    },
    {
      "identifier": "fs:allow-read-text-file",
      "scope": {
        "allow": ["**"]
      }
    }
  ]
}